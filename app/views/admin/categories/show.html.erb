<%- model_class = Category -%>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>
</div>
<div class="row">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @category.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @category.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:featured_image) %>:</strong></dt>
    <dd><%= @category.featured_image %></dd>
  </dl>
  <div class="text-center">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                admin_categories_path, :class => 'btn btn-default  btn-outline' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_category_path(@category), :class => 'btn btn-warning btn-outline' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_category_path(@category),
                :method => 'delete',
                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                :class => 'btn btn-danger  btn-outline' %>
  </div>
</div>