<%- model_class = Category -%>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %> <%= link_to t('.new', :default => t("helpers.links.new")),
                                                                                                 new_admin_category_path,
                                                                                                 :class => 'btn btn-success btn-outline' %>
  </h1>
</div>
</div>
<div class="row">
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.id, admin_category_path(category) %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.featured_image %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_category_path(category), :class => 'btn btn-warning btn-xs  btn-outline', data: {no_turbolink: true} %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_category_path(category),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'), no_turbolink: true)},
                      :class => 'btn btn-xs btn-danger  btn-outline' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

</div>