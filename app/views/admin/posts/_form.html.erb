<%= form_for [:admin, @post], :html => {:class => "form-horizontal post"} do |f| %>

    <% if @post.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :content, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.cktext_area :content, :class => 'form-control', rows: 5 %>
      </div>
      <%= f.error_span(:content) %>
    </div>
    <div class="form-group">
      <%= f.label :featured_image, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :featured_image, :class => 'form-control' %>
      </div>
      <%= f.error_span(:featured_image) %>
    </div>
    <div class="form-group">
      <%= f.label :Category, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :category_id, Category.order(:name), :id, :name, {prompt: true}, {class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary  btn-outline' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    admin_posts_path, :class => 'btn btn-warning  btn-outline' %>
      </div>
    </div>

<% end %>
