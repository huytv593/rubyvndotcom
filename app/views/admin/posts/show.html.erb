<%- model_class = Post -%>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>
</div>
<div class="row">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @post.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
    <dd><%= @post.content.html_safe %></dd>
    <dt><strong><%= model_class.human_attribute_name(:featured_image) %>:</strong></dt>
    <dd><%= @post.featured_image %></dd>
    <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
    <dd><%= Category.find(@post.category_id).name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= User.find(@post.user_id).email %></dd>
  </dl>
  <div class="text-center">


    <%= link_to t('.back', :default => t("helpers.links.back")),
                admin_posts_path, :class => 'btn btn-default btn-outline', data: {no_turbolink: true} %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_post_path(@post), :class => 'btn btn-warning btn-outline', data: {no_turbolink: true} %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_post_path(@post),
                :method => 'delete',
                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'), no_turbolink: true)},
                :class => 'btn btn-danger  btn-outline' %>
  </div>
</div>