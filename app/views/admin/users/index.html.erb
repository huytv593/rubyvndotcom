<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Users</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">

    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Role</th>
            <th>Posts</th>
            <th>Comments</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <%
            i = 1
            @users.each do |user|
          %>
              <tr class="<%= i.odd? ? 'odd' : 'even' %>">
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= if user.has_role? :admin
                          'admin'
                        end
                %></td>
                <td>12</td>
                <td>12</td>
                <td class="center">
                  <%= link_to "View", admin_users_path(user), class: "btn btn-default", data: {no_turbolink: true} %>
                  <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-warning", data: {no_turbolink: true} %>
                  <%= link_to "Delete", admin_users_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
                </td>
              </tr>

          <% end %>

          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>