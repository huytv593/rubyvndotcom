<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('<%= yield(:featured_image).nil? ? asset_path('home-bg.jpg'):asset_path(yield(:featured_image)) %>')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>
            <%= yield(:name).nil? ? "Ruby Blog":yield(:name) %>
          </h1>
          <hr class="small">
          <span class="subheading"><%= yield(:description).nil? ? "A Ruby Blog on Vietnam":yield(:description) %></span>
        </div>
      </div>
    </div>
  </div>
</header>